<mvc:View 
	xmlns:core="sap.ui.core" 
	xmlns:mvc="sap.ui.core.mvc" 
	xmlns="sap.m" 
	controllerName="ehb.YMM01_App.controller.Form"
	xmlns:html="http://www.w3.org/1999/xhtml"
	xmlns:smartFilterBar="sap.ui.comp.smartfilterbar"
	xmlns:smartTable="sap.ui.comp.smarttable"
	xmlns:fb="sap.ui.comp.filterbar">
	<App>
		<pages>
			<Page title="Put expired batches in restricted use stock">
				<content>
					<fb:FilterBar search="onSearch" showGoOnFB="false" searchEnabled="false" showRestoreButton="false">
						<fb:filterGroupItems>
							<fb:FilterGroupItem groupName="__$INTERNAL$" name="A" label="Material" labelTooltip="Tooltip" partOfCurrentVariant="true" visibleInFilterBar="true">
								<fb:control>
									<Input
										id="matInput"
										type="Text">
									</Input>
								</fb:control>
							</fb:FilterGroupItem>
			
							<fb:FilterGroupItem groupName="__$INTERNAL$" name="B" label="Plant" labelTooltip="Tooltip" partOfCurrentVariant="true" visibleInFilterBar="false">
								<fb:control>
									<Input
										id="plantInput"
										type="Text">
									</Input>
								</fb:control>
							</fb:FilterGroupItem>
			
							<fb:FilterGroupItem groupName="__$INTERNAL$" name="C" label="Batch" labelTooltip="Tooltip" partOfCurrentVariant="true" visibleInFilterBar="true">
								<fb:control>
									<Input
										id="batchInput"
										type="Text">
									</Input>
								</fb:control>				
							</fb:FilterGroupItem>
							
							<fb:FilterGroupItem groupName="__$INTERNAL$" name="D" label="Local Date" labelTooltip="Tooltip" partOfCurrentVariant="true" visibleInFilterBar="true">
								<fb:control>
									<DatePicker
										id="DP"
										placeholder="Enter Date ..."
										valueFormat="yyyy-MM-dd" displayFormat="long"
										change="handleChange"
										class="sapUiSmallMarginBottom"/>
								</fb:control>				
							</fb:FilterGroupItem>			
							
							<fb:FilterGroupItem groupName="__$INTERNAL$" name="E" label="Update" labelTooltip="Tooltip" partOfCurrentVariant="true" visibleInFilterBar="true">
								<fb:control>
									<CheckBox id="isUpdate"/>
								</fb:control>				
							</fb:FilterGroupItem>
						</fb:filterGroupItems>				
								
				    </fb:FilterBar>
					
					<Table
					  id="table"
					  items="{path: '/batchSet'}">
						<headerToolbar>
							<Toolbar>
								<Title
									id="tableHeader"
									text="Batches"/>
								<ToolbarSpacer/>
							</Toolbar>
						</headerToolbar>
						
						<columns>
							<Column id="nameColumn">
								<Text
									id="nameColumnTitle"
									text="Material"/>
							</Column>
							<Column
								id="supplierNameColumn"
								demandPopin="false"
								minScreenWidth="Tablet">
								<Text text="Batch"/>
							</Column>
							<Column
								id="unitPriceColumn"
								demandPopin="true"
								minScreenWidth="Tablet">
								<Text text="Plant"/>
							</Column>
							<Column id="unitsOnOrderColumn"
								demandPopin="true"
								minScreenWidth="Tablet"
								hAlign="End">
								<Text text="Expiry Date"/>
							</Column>
						</columns>
						
						<items>
							<ColumnListItem
							type="Active"
							press=".onPress">
								<cells>
									<ObjectIdentifier
										title="{Matnr}"/>
									<Text text = "{Charg}"/>
									<Text text = "{Werks}"/>
									<Text text = "{
									path: 'Vfdat', 
									type: 'sap.ui.model.type.Date',
									formatOptions: {
										style: 'short'
									}}"/>
								</cells>
							</ColumnListItem>
						</items>
					</Table>
				</content>
				
				<footer>
					<OverflowToolbar id="otbFooter">
						<ToolbarSpacer/>
						<Button type="Emphasized" text="Execute" press="executeForm">
							<layoutData><OverflowToolbarLayoutData priority="NeverOverflow" /></layoutData>
						</Button>
					</OverflowToolbar>
				</footer>
			</Page>
		</pages>
	</App>
</mvc:View>