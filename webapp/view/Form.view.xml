<mvc:View 
	xmlns:core="sap.ui.core" 
	xmlns:mvc="sap.ui.core.mvc" 
	xmlns="sap.m" 
	controllerName="ehb.YMM01_App.controller.Form"
	xmlns:html="http://www.w3.org/1999/xhtml"
	xmlns:smartFilterBar="sap.ui.comp.smartfilterbar"
	xmlns:smartTable="sap.ui.comp.smarttable">
	<App>
		<pages>
			<Page title="Put expired batches in restricted use stock">
				<content>
					<VBox id="form">
						<Label text="Material" labelFor="matInput"/>
						<Input
							id="matInput"
							type="Text">
						</Input>
						
						<Label text="Plant" labelFor="plantInput"/>
						<Input
							id="plantInput"
							type="Text">
						</Input>
						
						<Label text="Batch" labelFor="batchInput"/>
						<Input
							id="batchInput"
							type="Text">
						</Input>
						
						<Label text="Local Date" labelFor="DP"/>
						<DatePicker
							id="DP"
							placeholder="Enter Date ..."
							valueFormat="yyyy-MM-dd" displayFormat="long"
							change="handleChange"
							class="sapUiSmallMarginBottom"/>
							
						<CheckBox id="isWithoutStock" text="Include charges without stock" selected="true"/>
						<CheckBox id="isUpdate" text="Update"/>
						
						<Button text="Execute" press="executeForm"></Button>
					</VBox>
					
					<Table
					  id="table"
					  items="{path: '/batchSet'}">>
						<headerToolbar>
							<Toolbar>
								<Title
									id="tableHeader"
									text="Batches"/>
								<ToolbarSpacer/>
							</Toolbar>
						</headerToolbar>
						
						<columns>
							<Column id="nameColumn">
								<Text
									id="nameColumnTitle"
									text="Material"/>
							</Column>
							<Column
								id="supplierNameColumn"
								demandPopin="false"
								minScreenWidth="Tablet">
								<Text text="Batch"/>
							</Column>
							<Column
								id="unitPriceColumn"
								demandPopin="true"
								minScreenWidth="Tablet">
								<Text text="Plant"/>
							</Column>
							<Column id="unitsOnOrderColumn"
								demandPopin="true"
								minScreenWidth="Tablet"
								hAlign="End">
								<Text text="Expiry Date"/>
							</Column>
						</columns>
						
						<items>
							<ColumnListItem
							type="Active"
							press=".onPress">
								<cells>
									<ObjectIdentifier
										title="{Matnr}"/>
									<Text text = "{Charg}"/>
									<Text text = "{Werks}"/>
									<Text text = "{
										path: 'Vfdat', 
										type: 'sap.ui.model.type.Date',
										formatOptions: {
											style: 'short'
										}}"/>
								</cells>
							</ColumnListItem>
						</items>
					</Table>
				</content>
			</Page>
		</pages>
	</App>
</mvc:View>