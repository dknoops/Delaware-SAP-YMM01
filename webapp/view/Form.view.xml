<mvc:View 
	xmlns:core="sap.ui.core" 
	xmlns:mvc="sap.ui.core.mvc" 
	xmlns="sap.m" 
	controllerName="ehb.YMM01_App.controller.Form"
	xmlns:html="http://www.w3.org/1999/xhtml"
	xmlns:smartFilterBar="sap.ui.comp.smartfilterbar"
	xmlns:smartTable="sap.ui.comp.smarttable">
	<App>
		<pages>
			<Page title="Put expired batches in restricted use stock">
				<content>
					<Label text="Material" labelFor="mat"/>
					<Select
						id="mat"
						forceSelection="false"
						selectedKey="{/SelectedProduct}"
						items="{
							path: '/batchSet',
							sorter: { path: 'Matnr' }
						}">
						<core:Item key="{Matnr}" text="{Matnr}" />
					</Select>
					
					<Label text="Plant" labelFor="plant"/>
					<Select
						id="plant"
						forceSelection="false"
						selectedKey="{/SelectedProduct}"
						items="{
							path: '/batchSet',
							sorter: { path: 'Werks' }
						}">
						<core:Item key="{Werks}" text="{Werks}" />
					</Select>
					
					<Label text="Batch" labelFor="batch"/>
					<Select
						id="batch"
						forceSelection="false"
						selectedKey="{/SelectedProduct}"
						items="{
							path: '/batchSet',
							sorter: { path: 'Charg' }
						}">
						<core:Item key="{Charg}" text="{Charg}" />
					</Select>
					
					
					<Label text="Local Date" labelFor="DP"/>
					<DatePicker
						id="DP"
						placeholder="Enter Date ..."
						valueFormat="yyyy-MM-dd" displayFormat="long"
						change="handleChange"
						class="sapUiSmallMarginBottom"/>
						
					<CheckBox text="Include charges without stock" selected="true"/>
					<CheckBox text="Update"/>
					
					<Table
					  items="{path: '/batchSet'}">
						<headerToolbar>
							<Toolbar>
								<Title
									id="tableHeader"
									text="Batches"/>
								<ToolbarSpacer/>
							</Toolbar>
						</headerToolbar>
						
						<columns>
							<Column id="nameColumn">
								<Text
									id="nameColumnTitle"
									text="Material"/>
							</Column>
							<Column
								id="supplierNameColumn"
								demandPopin="false"
								minScreenWidth="Tablet">
								<Text text="Batch"/>
							</Column>
							<Column
								id="unitPriceColumn"
								demandPopin="true"
								minScreenWidth="Tablet">
								<Text text="Plant"/>
							</Column>
							<Column id="unitsOnOrderColumn"
								demandPopin="true"
								minScreenWidth="Tablet"
								hAlign="End">
								<Text text="Expiry Date"/>
							</Column>
						</columns>
						
						<items>
							<ColumnListItem
							type="Navigation"
							press=".onPress">
								<cells>
									<ObjectIdentifier
										title="{Matnr}"/>
									<Text text = "{Charg}"/>
									<Text text = "{Werks}"/>
									<Text text = "{Vfdat}"/>
								</cells>
							</ColumnListItem>
						</items>
					</Table>
				</content>
			</Page>
		</pages>
	</App>
</mvc:View>